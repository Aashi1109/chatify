{
  "openapi": "3.0.3",
  "info": {
    "title": "Docs for authentication",
    "description": "Auth",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login",
        "operationId": "login",
        "requestBody": {
          "$ref": "#/components/requestBodies/RBLoginRequest"
        },
        "responses": {
          "200": {
            "$ref": "#/components/requestBodies/RBLoginResponse"
          },
          "404": {
            "description": "User not found with provided username"
          },
          "401": {
            "description": "Invalid credentials provided"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SLoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "jonedoe12"
          },
          "password": {
            "type": "string",
            "example": "123456789"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "SLoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "123456789"
          },
          "userId": {
            "type": "string",
            "example": "jonedoe123"
          }
        },
        "required": [
          "token",
          "userId"
        ]
      }
    },
    "requestBodies": {
      "RBLoginRequest": {
        "description": "Request body for login",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SLoginRequest"
            }
          }
        }
      },
      "RBLoginResponse": {
        "description": "Successfully logged in",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SLoginResponse"
            }
          }
        }
      }
    }
  }
}
